<div class="container">
<h1><%= @product.name%></h1>

<%=image_tag @product.image_url, alt:"image of #{@product.name}", class:"show-image"%>

<section class = "product-details">
    <h3>description</h3>
    <p> <%=@product.description%> </p>
    <p> <%=@product.quantity%> in stock</p>
    <h3>$<%= number_with_precision(@product.price, :precision => 2, :delimiter => ',')%></h3>
</section>

<%= form_with model: @order_product, url: order_products_path, method: :post do |f|%>
    <%= f.label :quantity%>
    <%= f.number_field :quantity, in: 1..20, step: 1 %>
    <%= f.hidden_field :product_id, value: @product.id%>
    <%= f.hidden_field :order_id, value: @current_order.id%>
    <%= f.submit "Add to cart"%>
<% end %>
</div>