<section class="parallax">
<div class="splash-text">
<h1>Welcome to <span class="hacksy">HaCKSy.</span></h1>
<h2>Want to be a startup bro, but don't have a startup? We've got you covered.</h2>
</div>
<%= link_to 'Explore Networking', category_products_path(category_id: 4), class:"btn btn-success splash-button" %>
</section>

<section class="featured">
<h3>Featured: Boost your team's <strong>diversity</strong></h3>
    <div id="carouselExampleControls" class="carousel slide" data-ride="carousel">
        <ol class="carousel-indicators">
            <li data-target="#carouselExampleIndicators" data-slide-to="0" class="active"></li>
            <li data-target="#carouselExampleIndicators" data-slide-to="1"></li>
            <li data-target="#carouselExampleIndicators" data-slide-to="2"></li>
        </ol>
    <div class="carousel-inner">
        <div class="carousel-item active">
        <img src=<%=@products.first.image_url%> alt=<%=@products.last.name%> class="featured-image d-block w-100 img-fluid">
        </div>
        <% @products[1..2].each do |product| %>
        <div class="carousel-item">
        <img src=<%=product.image_url%> alt=<%=product.name%> class="featured-image d-block w-100 img-fluid">
        </div>
        <%end%>
    </div>
    <a class="carousel-control-prev" href="#carouselExampleControls" role="button" data-slide="prev">
        <span class="carousel-control-prev-icon" aria-hidden="true"></span>
        <span class="sr-only">Previous</span>
    </a>
    <a class="carousel-control-next" href="#carouselExampleControls" role="button" data-slide="next">
        <span class="carousel-control-next-icon" aria-hidden="true"></span>
        <span class="sr-only">Next</span>
    </a>
    </div>

</section>  
