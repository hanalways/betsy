<h2>Products List</h2>
<table>

  <tr>
    <th></th>
    <th>Name</th>
    <th>Price</th>
    <th>Quantity</th>
  </tr>

  <% @products.each do |product| %>
  <tr>
    <td><%= link_to product.name, product_path(product.id) %></td>
    <td><%= link_to product.price, product_path(product.id) %></td>
    <td><%= link_to product.quantity, product_path(product.id) %></td>
    <td><%= link_to "Edit", edit_product_path(product.id) %></td>
    <td><%= link_to "Retire", toggle_retire_product_path(product.id), method: :post %></td>
  </tr>
  <% end %>

</table>
