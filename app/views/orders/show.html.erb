<h2> Order <%= @order.id %> </h2>

<table class="table">
  <thead>
    <tr>
    <th>
    Merchant
    </th>
      <th>
        Item
      </th>
      <th>
      Quantity
      </th>
      <th>
      Price
      </th>
    </tr>
  </thead>
  <tbody>
    <% @order.products.each do |product| %>
        <tr>
            <td><%= product.merchant.username %></td>
            <td><%= product.name %></td>
            <td><%= OrderProduct.find_by(order_id: @order.id, product_id: product.id).quantity %> </td>
            <td><%= OrderProduct.find_by(order_id: @order.id, product_id: product.id).total_price %></td>
        </tr>
    <% end %>
  </tbody>
</table>
